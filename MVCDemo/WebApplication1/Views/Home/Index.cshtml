@{
    ViewBag.Title = "Transactions";
}
<script src="~/Scripts/transaction.js">
</script>

<div class="container">
    <h2>Transaction Records</h2>
    <button type="button" class="btn btn-primary" data-target="#tranModal" onclick="clearTextBox();">Add New Transaction</button><br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Payee Name
                </th>
                <th>
                    Purchase Date
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Memo
                </th>
                <th>
                    Category
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
    Total number of transactions: <label id="totalTran"></label><br />
    Total amount of purchases: <label id="totalAmount"></label><br />
    Average amount of purchases: <label id="avgAmount"></label><br />
</div>
<div class="modal fade" id="tranModal" tabindex="-1" role="dialog" aria-labelledby="tranModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="tranModalLabel">Add Transaction</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group" id="rowId" style="display:block">
                        <label for="TransactionId">ID</label>
                        <input type="text" autocomplete="off" class="form-control" id="TransactionId" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Payee">Payee</label>
                        <input type="text" class="form-control" autocomplete="off" id="Payee" placeholder="Payee" />
                    </div>
                    <div class="form-group">
                        <label for="PurchaseDate">PurchaseDate</label>
                        <input type="datetime" class="form-control date-picker" id="PurchaseDate" autocomplete="off" placeholder="PurchaseDate" />
                    </div>
                    <div class="form-group">
                        <label for="Amount">Amount</label>
                        <input type="text" class="form-control" id="Amount" autocomplete="off" placeholder="Amount" />
                    </div>
                    <div class="form-group">
                        <label for="Memo">Memo</label>
                        <input type="text" class="form-control" id="Memo" autocomplete="off" placeholder="Memo" />
                    </div>
                    <div class="form-group">
                        <label for="Category">Category</label>
                        @*<input type="text" class="form-control" id="Category" placeholder="Category" />*@
                        <select class="form-control" id="categoryDropdown" name="categoryDropdown"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
